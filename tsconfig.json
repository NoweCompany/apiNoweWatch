{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021"],

    "module": "commonjs",
    "rootDir": "./src",

    "allowJs": false,
    "checkJs": false,

    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
